{
    "name": "Barracuda Email Gateway",
    "description": null,
    "pages": [
      {
        "name": "Barracuda Email Gateway",
        "description": null,
        "widgets": [
          {
            "visualization": {
              "id": "viz.billboard"
            },
            "layout": {
              "column": 1,
              "row": 1,
              "height": 6,
              "width": 2
            },
            "title": "Summary",
            "rawConfiguration": {
              "dataFormatters": [
                {
                  "name": "Uptime (Days)",
                  "precision": 2,
                  "type": "decimal"
                },
                {
                  "name": "Last Update",
                  "type": "date"
                }
              ],
              "nrqlQueries": [
                {
                  "accountId": 0,
                  "query": "FROM Metric SELECT latest(device_name) AS 'Device Name', latest(src_addr) AS 'Device IP', latest(SysObjectID) AS 'SysObjectID', latest(entity.type) AS 'NR Entity Type', latest(instrumentation.name) AS 'Ktranslate Profile', latest(kentik.snmp.Uptime)/8640000 AS 'Uptime (Days)', latest(timestamp) AS 'Last Update', latest(PollingHealth) AS 'Polling Health' WHERE provider = 'kentik-barracuda-email-gateway'"
                }
              ],
              "thresholds": []
            }
          },
          {
            "visualization": {
              "id": "viz.billboard"
            },
            "layout": {
              "column": 3,
              "row": 1,
              "height": 3,
              "width": 2
            },
            "title": "Latest Delivery Success",
            "rawConfiguration": {
              "dataFormatters": [],
              "nrqlQueries": [
                {
                  "accountId": 0,
                  "query": "FROM Metric SELECT latest(kentik.snmp.lastMessageDelivery) AS 'Last Message Delivery (mins)' WHERE provider = 'kentik-barracuda-email-gateway'"
                }
              ],
              "thresholds": []
            }
          },
          {
            "visualization": {
              "id": "viz.billboard"
            },
            "layout": {
              "column": 5,
              "row": 1,
              "height": 1,
              "width": 4
            },
            "title": "Current CPU",
            "rawConfiguration": {
              "dataFormatters": [],
              "nrqlQueries": [
                {
                  "accountId": 0,
                  "query": "FROM Metric SELECT latest(100 - kentik.snmp.CPU) AS 'CPU Utilization %' WHERE provider = 'kentik-barracuda-email-gateway'"
                }
              ],
              "thresholds": [
                {
                  "alertSeverity": "WARNING",
                  "value": 90
                },
                {
                  "alertSeverity": "CRITICAL",
                  "value": 95
                }
              ]
            }
          },
          {
            "visualization": {
              "id": "viz.billboard"
            },
            "layout": {
              "column": 9,
              "row": 1,
              "height": 1,
              "width": 4
            },
            "title": "Current Memory",
            "rawConfiguration": {
              "dataFormatters": [],
              "nrqlQueries": [
                {
                  "accountId": 0,
                  "query": "FROM Metric SELECT latest(kentik.snmp.MemoryUtilization) AS 'Memory Utilization %' WHERE provider = 'kentik-barracuda-email-gateway'"
                }
              ],
              "thresholds": [
                {
                  "alertSeverity": "WARNING",
                  "value": 90
                },
                {
                  "alertSeverity": "CRITICAL",
                  "value": 95
                }
              ]
            }
          },
          {
            "visualization": {
              "id": "viz.line"
            },
            "layout": {
              "column": 5,
              "row": 2,
              "height": 5,
              "width": 4
            },
            "title": "CPU Utilization Timeline",
            "rawConfiguration": {
              "legend": {
                "enabled": true
              },
              "nrqlQueries": [
                {
                  "accountId": 0,
                  "query": "FROM Metric SELECT average(100 - kentik.snmp.CPU) AS 'Average', min(100 - kentik.snmp.CPU) AS 'Min', max(100 - kentik.snmp.CPU) AS 'Max' WHERE provider = 'kentik-barracuda-email-gateway' TIMESERIES 5 MINUTES"
                }
              ],
              "yAxisLeft": {
                "max": 100,
                "min": 0,
                "zero": false
              }
            }
          },
          {
            "visualization": {
              "id": "viz.line"
            },
            "layout": {
              "column": 9,
              "row": 2,
              "height": 5,
              "width": 4
            },
            "title": "Memory Utilization Timeline",
            "rawConfiguration": {
              "legend": {
                "enabled": true
              },
              "nrqlQueries": [
                {
                  "accountId": 0,
                  "query": "FROM Metric SELECT average(kentik.snmp.MemoryUtilization) AS 'Average', min(kentik.snmp.MemoryUtilization) AS 'Min', max(kentik.snmp.MemoryUtilization) AS 'Max' WHERE provider = 'kentik-barracuda-email-gateway' TIMESERIES 5 MINUTES"
                }
              ],
              "yAxisLeft": {
                "max": 100,
                "min": 0,
                "zero": false
              }
            }
          },
          {
            "visualization": {
              "id": "viz.billboard"
            },
            "layout": {
              "column": 3,
              "row": 4,
              "height": 3,
              "width": 2
            },
            "title": "Unique Recipients",
            "rawConfiguration": {
              "dataFormatters": [
                {
                  "name": "Unique Recipients",
                  "precision": null,
                  "type": "decimal"
                }
              ],
              "nrqlQueries": [
                {
                  "accountId": 0,
                  "query": "FROM Metric SELECT latest(kentik.snmp.uniqueRecipients) AS 'Unique Recipients' WHERE provider = 'kentik-barracuda-email-gateway' COMPARE WITH 1 HOUR AGO"
                }
              ],
              "thresholds": []
            }
          },
          {
            "visualization": {
              "id": "viz.line"
            },
            "layout": {
              "column": 1,
              "row": 7,
              "height": 3,
              "width": 4
            },
            "title": "Queue Statistics",
            "rawConfiguration": {
              "legend": {
                "enabled": true
              },
              "nrqlQueries": [
                {
                  "accountId": 0,
                  "query": "FROM Metric SELECT average(kentik.snmp.inQueueSize) AS 'Inbound Queue', average(kentik.snmp.outQueueSize) AS 'Outbound Queue', average(kentik.snmp.deferredQueueSize) AS 'Deferred Queue', average(kentik.snmp.notifyQueueSize) AS 'Notification Queue' WHERE provider = 'kentik-barracuda-email-gateway' TIMESERIES 5 MINUTES"
                }
              ],
              "yAxisLeft": {
                "zero": false
              }
            }
          },
          {
            "visualization": {
