{
    "name": "RabbitMQ Node Metrics (OpenTelemetry)",
    "pages": [
        {
            "name": "RabbitMQ Node Metrics",
            "widgets": [
                {
                    "visualization": {
                        "id": "viz.line"
                    },
                    "layout": {
                        "column": 1,
                        "row": 1,
                        "height": 3,
                        "width": 4
                    },
                    "title": "Memory Usage",
                    "rawConfiguration": {
                        "nrqlQueries": [
                            {
                                "query": "FROM Metric SELECT latest(rabbitmq.node.mem_used) AS 'Memory Used', latest(rabbitmq.node.mem_limit) AS 'Memory Limit' WHERE metricName LIKE 'rabbitmq.node.mem_%' AND instrumentation.provider = 'opentelemetry' TIMESERIES AUTO",
                                "accountId": 0}
                        ],
                        "yAxisLeft": {
                            "zero": true
                        }
                    }
                },
                {
                    "visualization": {
                        "id": "viz.line"
                    },
                    "layout": {
                        "column": 5,
                        "row": 1,
                        "height": 3,
                        "width": 4
                    },
                    "title": "Disk Space",
                    "rawConfiguration": {
                        "nrqlQueries": [
                            {
                                "query": "FROM Metric SELECT latest(rabbitmq.node.disk_free) AS 'Disk Free', latest(rabbitmq.node.disk_free_limit) AS 'Disk Free Limit' WHERE metricName LIKE 'rabbitmq.node.disk_free%' AND instrumentation.provider = 'opentelemetry' TIMESERIES AUTO",
