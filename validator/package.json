{
  "name": "entity-synthesis-definitions-validator",
  "description": "Validated entity synthesis definitions",
  "version": "1.0.0",
  "scripts": {
    "test": "jest",
    "validate-definition": "pajv validate --errors=json -s schemas/entity-schema-v1.json -d '../definitions/*/definition.yml'",
    "validate-summary-metrics": "pajv validate --errors=json -s schemas/summary-metrics-schema-v1.json -d '../definitions/*/summary_metrics.yml'",
    "validate-golden-metrics": "pajv validate --errors=json -s schemas/golden-metrics-schema-v1.json -d '../definitions/*/golden_metrics.yml'",
    "validate-dashboard": "pajv validate --errors=json -s schemas/dashboard-schema-v1.json -d '../definitions/*/*dashboard.json'",
    "validate-folders": "node tools/validate_folders.js",
    "validate-rules": "node tools/validate_rules.js",
    "validate-schemas": "npm run validate-definition && npm run validate-summary-metrics && npm run validate-golden-metrics && npm run validate-dashboard && npm run validate-folders",
    "check": "npm run validate-schemas && npm run validate-rules",
    "sanitize-dashboards": "node tools/sanitize_dashboards.js"
  },
  "dependencies": {
    "is-equal": "1.6.1",
    "js-yaml": "3.14.0",
    "pajv": "1.2.0",
    "path": "0.12.7"
  },
  "devDependencies": {
    "jest": "^26.6.3"
  }
}
